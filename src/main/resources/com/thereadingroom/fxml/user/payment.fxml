<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
	  fx:controller="com.thereadingroom.controller.user.PaymentController" style="-fx-padding: 30; -fx-background-color: #f9f9f9;">
	<Label text="Enter Payment Information" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

	<Label fx:id="totalAmountLabel" text="Total Amount: $" style="-fx-font-size: 18px;"/>

	<TextField fx:id="cardNumberField" promptText="Card Number" style="-fx-pref-width: 250px;"/>
	<TextField fx:id="cardHolderNameField" promptText="Cardholder Name" style="-fx-pref-width: 250px;"/>
	<TextField fx:id="expiryDateField" promptText="Expiry Date (MM/YY)" style="-fx-pref-width: 250px;"/>
	<TextField fx:id="cvvField" promptText="CVV" style="-fx-pref-width: 250px;"/>

	<Button text="Make Payment" onAction="#handlePayment" style="-fx-pref-width: 150px; -fx-padding: 10px;"/>
</VBox>
